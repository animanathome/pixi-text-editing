{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es2020",
    "target": "es5",
    "allowJs": true,
    "allowDeclarations": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      // ... other libs
      "es2019",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
      "src/**/*",
      "tests/**/*",
  ],
  "typeRoots": [
    "./typings",
  ]
}
